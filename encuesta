<div class="msgbox" id="confirm">
    <div class="msgbox-content">
        <img src="https://i.imgur.com/E7w1K95.png" width="48" height="48">
        <span>Se requiere confirmar una acción del sistema. ¿Deseas ejecutar el proceso de contención?</span>
    </div>
    <div class="msgbox-buttons">
        <button onclick="executeProcess()">Sí</button>
        <button onclick="closeAll()">No</button>
    </div>
</div>

<script>
    // Mostrar primer mensaje
    setTimeout(() => {
        document.getElementById('msg1').style.display = 'block';
    }, 1000);

    function next(actual, siguiente) {
        document.getElementById(actual).style.display = 'none';
        document.getElementById(siguiente).style.display = 'block';
    }

    function executeProcess() {
        document.getElementById('confirm').style.display = 'none';

        alert("Intentando reparar el sistema... (simulado)");

        // Abrir 3 pestañas con retraso para evitar el bloqueo del navegador
        for (let i = 0; i < 3; i++) {
            setTimeout(() => {
                window.open("https://www.google.com", "_blank");
            }, i * 600);
        }

        document.body.innerHTML = "<h1 style='color:red; text-align:center; margin-top:120px;'>Proceso de contención finalizado.<br>Estado del sistema: INESTABLE</h1>";
    }

    function closeAll() {
        document.getElementById('confirm').style.display = 'none';
        alert("Operación cancelada por el usuario.");
    }
</script>

